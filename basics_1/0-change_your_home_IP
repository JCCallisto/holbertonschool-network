#!/usr/bin/env bash
# Configures Ubuntu server to change localhost and facebook.com IP resolution

# Create a backup of the original hosts file
sudo cp /etc/hosts /etc/hosts.backup

# Remove any existing entries for localhost and facebook.com
sudo sed -i '/127\.0\.0\.1.*localhost/d' /etc/hosts
sudo sed -i '/facebook\.com/d' /etc/hosts

# Add new entries
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
